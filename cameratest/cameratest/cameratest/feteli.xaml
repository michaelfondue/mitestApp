<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:local="clr-namespace:cameratest;assembly=cameratest"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cameratest.feteli">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15">
      <Button x:Name="takePic" Text="Cheeese, mach Feteli" IsEnabled="True" Clicked="takePhoto" />
      <Button x:Name="choosePic" Text="Oiidaa,nem Feteli" IsEnabled="True" Clicked="choosePhoto" />
      <Image x:Name="image"/>
      <ListView ItemsSource="{x:Static local:App.PhoneNumbers}" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>