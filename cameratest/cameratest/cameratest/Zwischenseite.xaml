<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cameratest.Zwischenseite"
                           BackgroundColor="White">
<ContentPage.Padding>
  <OnPlatform x:TypeArguments="Thickness"
              iOS="20, 40, 20, 20"
              Android="20, 5, 20, 20"
              WinPhone="20, 20, 20, 20" />
</ContentPage.Padding>
<ContentPage.Content>
  <StackLayout VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"
               Orientation="Vertical"
               Spacing="15">

    <StackLayout HorizontalOptions = "End"
                 VerticalOptions="Fill"
                  Orientation="Horizontal"
                  Spacing="1">

      <Button x:Name="about" IsEnabled="True" Image="info.png" BackgroundColor="White"/>
      <Button x:Name="settings" IsEnabled="True" Clicked="openSettings" Image="settings.png" BackgroundColor="White"/>
    </StackLayout>

    <Image Source="logo_hintergrund.jpg" />
    
    <Button x:Name="reportBug" Text="Einen Fehler melden" IsEnabled="True" Clicked="reportingBug"/>
    <Button x:Name="faq" Text="Häufig gestellte Fragen" IsEnabled="True"/>
    <Button x:Name="videos" Text="Videos zur Problembehandlung" IsEnabled="True"/>
  </StackLayout>
</ContentPage.Content>
</ContentPage>
