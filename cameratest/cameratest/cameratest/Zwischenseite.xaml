<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cameratest.Zwischenseite">
<ContentPage.Padding>
  <OnPlatform x:TypeArguments="Thickness"
              iOS="20, 40, 20, 20"
              Android="20, 20, 20, 20"
              WinPhone="20, 20, 20, 20" />
</ContentPage.Padding>
<ContentPage.Content>
  <StackLayout VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand"
               Orientation="Vertical"
               Spacing="15">

    <StackLayout VerticalOptions="Fill"
      HorizontalOptions="Fill"
      Orientation="Horizontal"
      Spacing="15">
      <Button x:Name="about" Text="i" IsEnabled="True" HorizontalOptions = "Center"/>
      <Button x:Name="settings" Text="settings" IsEnabled="True" HorizontalOptions = "End" Clicked="openSettings"/>
    </StackLayout>
    
    <Button x:Name="reportBug" Text="Einen Fehler melden" IsEnabled="True" Clicked="reportingBug"/>
    <Button x:Name="faq" Text="Häufig gestellte Fragen" IsEnabled="True"/>
    <Button x:Name="videos" Text="Videos zur Problembehandlung" IsEnabled="True"/>
  </StackLayout>
</ContentPage.Content>
</ContentPage>
