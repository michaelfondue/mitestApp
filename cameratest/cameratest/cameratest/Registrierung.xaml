<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cameratest.Registrierung">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <ScrollView>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15">

      <StackLayout VerticalOptions="Fill"
      HorizontalOptions="Fill"
      Orientation="Horizontal"
      Spacing="15">
        <Button x:Name="about" Text="i" IsEnabled="True" HorizontalOptions = "Center"/>
        <Button x:Name="settings" Text="settings" IsEnabled="True" HorizontalOptions = "End" Clicked ="openSettings"/>
      </StackLayout>
      
      <Label Text="Name Ihrer Firma" />
      <Entry x:Name="customerCompanyName" />
      <Label Text="Name Vorname" />
      <Entry x:Name="reportername" />
      <Label Text="E-Mail" />
      <Entry x:Name="eMail"/>
      <Label Text="Passwort" />
      <Entry x:Name="password"  />
      <Label Text="Passwort wiederholen" />
      <Entry x:Name="passwordAgain" />
      <Button x:Name="register" Text="Registrieren" IsEnabled="True" Clicked="registered" />
    </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>