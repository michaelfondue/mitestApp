<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cameratest.Registrierung"
                           BackgroundColor="White">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 5, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <ScrollView>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15">

      <StackLayout HorizontalOptions = "End"
                   VerticalOptions="Fill"
                    Orientation="Horizontal"
                    Spacing="1">

        <Button x:Name="about" IsEnabled="True" Clicked="openInfoPage" Image="info.png" BackgroundColor="White"/>
        <Button x:Name="settings" IsEnabled="True" Clicked="openSettings" Image="settings.png" BackgroundColor="White"/>
      </StackLayout>
      
      <Image Source="logo_hintergrund.jpg" />
      
      <Label Text="Name Ihrer Firma" />
      <Entry x:Name="customerCompanyName" Text="{Binding}" />
      <Label Text="Name Vorname" />
      <Entry x:Name="reporterName" Text="{Binding}" />
      <Label Text="Telefonnummer" />
      <Entry x:Name="phoneNumber" Text="{Binding}" Keyboard="Numeric"/>
      <Label Text="E-Mail" />
      <Entry x:Name="eMail" Text="{Binding}" TextChanged="Changed_eMail" Completed="Completed_eMail"/>
      <Label Text="Passwort" />
      <Entry x:Name="password" IsPassword="true" Text="{Binding}" TextChanged="Changed_password" Completed="Completed_password"/>
      <Label Text="Passwort wiederholen" />
      <Entry x:Name="passwordAgain" IsPassword="true" TextChanged="Changed_passwordAgain" Completed="Completed_passwordAgain"/>
      <Button x:Name="register" Text="Registrieren" IsEnabled="True" Clicked="registering" />
    </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>