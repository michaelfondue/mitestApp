<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cameratest.ChangePassword">
  <!--<Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />-->

  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15">

      <StackLayout VerticalOptions="Fill"
      HorizontalOptions="Fill"
      Orientation="Horizontal"
      Spacing="15">
        <Button x:Name="about" Text="i" IsEnabled="True" HorizontalOptions = "Center"/>
        <Button x:Name="settings" Text="settings" IsEnabled="True" HorizontalOptions = "End" Clicked="openSettings"/>
      </StackLayout>

      <Label Text="Bisheriges Passwort" />
      <Entry x:Name="oldPassword"/>
      <Label Text="neues Passwort" />
      <Entry x:Name="newPassword"  />
      <Label Text="neues Passwort wiederholen" />
      <Entry x:Name="newPasswordRepeat"  />
      <Button x:Name="changePassword" Text="Passwort ändern" IsEnabled="True" Clicked="changedPassword" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>